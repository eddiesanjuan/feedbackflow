#!/usr/bin/env bash
set -euo pipefail

ROOT_DIR="$(cd "$(dirname "${BASH_SOURCE[0]}")" && pwd)"

COMMAND="${1:-}"
shift || true

case "$COMMAND" in
  markupr)
    exec "$ROOT_DIR/scripts/setup-markupr.sh" "$@"
    ;;
  *)
    echo "Usage: ./setup markupr [--skip-install] [--skip-checks]"
    exit 1
    ;;
esac
